@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Import du fichier excel</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                @using (Html.BeginForm("ImportBase", "Stock", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="card-body">
                        <u><p>@ViewBag.message</p></u>
                        <u><p>@ViewBag.message2</p></u>
                        <u><p>A noter</p></u>
                        <p><i class="fas fa-exclamation-triangle"></i> Vérifiez bien les colonnes dans le tableur</p>
                        <p><i class="fas fa-exclamation-triangle"></i> Le fichier doît être en .xlsx</p>
                        <div class="form-group">
                            <label for="exampleInputFile">Base à importer</label>
                            <div class="input-group">
                                <div class="input-group-append">
                                    <div class="custom-file">
                                        <input type="file" name="files" runat="server">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <input type="submit" class="btn btn-primary" value="Import" />
                    </div>
                }
            </div>
            <!-- /.card -->
        </div>
        <div class="col-md-4">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Dernier import</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <h3>@ViewBag.date</h3>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">

                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>